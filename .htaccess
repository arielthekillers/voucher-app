<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Add trailing slash to directories
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteCond %{REQUEST_URI} !(.*)/$
    RewriteRule ^(.*)$ $1/ [L,R=301]
    
    RewriteRule ^public/ - [L]
    RewriteRule ^storage/ - [L]
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
